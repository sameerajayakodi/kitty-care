      </children>
    </Pane>

    <!-- Right side login form -->
    <Pane layoutX="1323.0" layoutY="-1.0" prefHeight="1010.0" prefWidth="577.0" styleClass="loginCard">
        <children>
            <Pane layoutX="7.0" layoutY="9.0" prefHeight="988.0" prefWidth="562.0">
