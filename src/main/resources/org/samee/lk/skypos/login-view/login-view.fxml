                    <!-- Login Form -->
                    <Label layoutX="71.0" layoutY="435.0" styleClass="item-details" text="Username" />
                    <TextField fx:id="usernameField" layoutX="71.0" layoutY="472.0" prefHeight="45.0" prefWidth="418.0" promptText="Enter your username" styleClass="searchInput" />

                    <Label layoutX="73.0" layoutY="527.0" styleClass="item-details" text="Password" />
                    <PasswordField fx:id="passwordField" layoutX="72.0" layoutY="562.0" prefHeight="45.0" prefWidth="418.0" promptText="Enter your password" styleClass="searchInput" />

                    <!-- Login Button -->
                    <Button fx:id="loginButton" layoutX="71.0" layoutY="645.0" onAction="#handleLogin" prefHeight="45.0" prefWidth="418.0" styleClass="primary-button" text="Login" />

                    <!-- Footer Text -->
                    <Label layoutX="183.0" layoutY="925.0" style="-fx-font-size: 12; -fx-opacity: 0.8;" text="Â© 2024 KittyCare. All rights reserved." />
               <Label fx:id="datetie" layoutX="160.0" layoutY="175.0" prefHeight="27.0" prefWidth="241.0" style="-fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 20;" />
                </children>
            </Pane>
        </children>
    </Pane>
