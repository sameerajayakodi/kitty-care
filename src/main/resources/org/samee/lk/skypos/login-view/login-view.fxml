    <!-- Left side content area -->
    <Pane prefHeight="1000.0" prefWidth="1323.0" style="-fx-background-color: #adc0e6;">
      <children>
         <ImageView fitHeight="1048.0" fitWidth="1733.0" layoutX="-260.0" layoutY="-8.0" pickOnBounds="true" preserveRatio="true">
